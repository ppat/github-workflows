{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "update renovate itself",
      "fetchChangeLogs": "off",
      "groupName": "renovate",
      "matchDatasources": [
        "docker",
        "github-releases",
        "npm"
      ],
      "matchPackageNames": [
        "npm:renovate",
        "renovate",
        "renovate/renovate",
        "renovatebot/renovate"
      ],
      "minimumReleaseAge": "3 days",
      "semanticCommitScope": "dev-tools",
      "semanticCommitType": "chore",
      "schedule": [
        "every 7 day"
      ]
    },
    {
      "description": "update ppat github actions",
      "matchManagers": [
        "github-actions"
      ],
      "matchPackageNames": [
        "/^ppat\//"
      ],
      "matchUpdateTypes": [
        "digest",
        "minor",
        "patch"
      ],
      "minimumReleaseAge": ""
    }
  ]
}
