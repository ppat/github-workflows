{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "mise packages",
      "matchFileNames": [
        "mise-renovate.toml",
        "mise.toml"
      ],
      "matchManagers": [
        "mise"
      ],
      "minimumReleaseAge": "7 days",
      "semanticCommitScope": "dev-tools",
      "separateMajorMinor": true,
      "separateMinorPatch": false,
      "separateMultipleMajor": true,
      "separateMultipleMinor": false
    },
    {
      "matchFileNames": [
        "mise-renovate.toml",
        "mise.toml"
      ],
      "matchManagers": [
        "mise"
      ],
      "matchPackageNames": [
        "oven-sh/bun",
        "astral-sh/uv"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "minimumReleaseAge": "30 days"
    },
    {
      "matchFileNames": [
        "mise-renovate.toml",
        "mise.toml"
      ],
      "matchManagers": [
        "mise"
      ],
      "matchPackageNames": [
        "nodejs",
        "hashicorp/terraform"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "minimumReleaseAge": "90 days"
    }
  ]
}
