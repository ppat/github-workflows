{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchPackageNames": [
        "oven-sh/bun",
        "astral-sh/uv"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "minimumReleaseAge": "30 days"
    },
    {
      "matchPackageNames": [
        "nodejs",
        "hashicorp/terraform"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "minimumReleaseAge": "90 days"
    }
  ]
}
