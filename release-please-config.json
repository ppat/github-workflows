{
  "changelog-sections": [
    { "type": "build", "section": "🏗️ Build System", "hidden": true },
    { "type": "chore", "section": "🧹 Miscellaneous", "hidden": false },
    { "type": "ci", "section": "🚦 Continuous Integration", "hidden": true },
    { "type": "docs", "section": "🛠 Improvements" },
    { "type": "feat", "section": "✨ Features" },
    { "type": "feature", "section": "✨ Features" },
    { "type": "fix", "section": "🚀 Enhancements + Bug Fixes" },
    { "type": "perf", "section": "🚀 Enhancements + Bug Fixes" },
    { "type": "refactor", "section": "🚀 Enhancements + Bug Fixes" },
    { "type": "revert", "section": "⚙️ Other" },
    { "type": "style", "section": "🛠 Improvements" },
    { "type": "test", "section": "🛠 Improvements" }
  ],
  "draft": false,
  "extra-files": [
    ".github/workflows/chainsaw-test.yaml",
    ".github/workflows/lint-commit-messages.yaml",
    ".github/workflows/lint-github-actions.yaml",
    ".github/workflows/lint-hadolint.yaml",
    ".github/workflows/lint-markdown.yaml",
    ".github/workflows/lint-pre-commit.yaml",
    ".github/workflows/lint-renovate-config-check.yaml",
    ".github/workflows/lint-shellcheck.yaml",
    ".github/workflows/lint-terraform.yaml",
    ".github/workflows/lint-yaml.yaml",
    ".github/workflows/release.yaml",
    ".github/workflows/update-aqua-checksums.yaml"
  ],
  "packages": {
    ".": {
      "extra-label": "pr-type:release"
    }
  },
  "prerelease": false,
  "pull-request-title-pattern": "chore(release): release${component} v${version}",
  "release-type": "simple",
  "separate-pull-requests": true,
  "sequential-calls": true,
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}
